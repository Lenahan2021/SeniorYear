<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.IceCream.IceCreamFragment">

    <ScrollView
        android:id="@+id/IceCreams"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/Chocolate"
                android:layout_width="match_parent"
                android:layout_height="91dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/ChocolateIMG"
                    android:layout_width="47dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:src="@drawable/chocolate" />

                <TextView
                    android:id="@+id/ChocolateTXT"
                    android:layout_width="198dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_horizontal|center_vertical"
                    android:text="Chocolate"
                    android:textColor="#177E00"
                    android:textSize="34sp"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/ChocolateBTN"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:layout_width="32dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:backgroundTint="#FEFEFE"
                    android:clickable="true"
                    android:gravity="center_horizontal|center_vertical"
                    android:text=">"
                    android:textColor="#FF0000"
                    tools:textSize="34sp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/MintLayout"
                android:layout_width="match_parent"
                android:layout_height="91dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/MintIMG"
                    android:layout_width="47dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:src="@drawable/mint" />

                <TextView
                    android:id="@+id/MintTXT"
                    android:layout_width="198dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_horizontal|center_vertical"
                    android:text="Mint"
                    android:textColor="#177E00"
                    android:textSize="34sp"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/MintBTN"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:layout_width="32dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:backgroundTint="#FEFEFE"
                    android:clickable="true"
                    android:gravity="center_horizontal|center_vertical"
                    android:text=">"
                    android:textColor="#FF0000"
                    tools:textSize="34sp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/Vanilla"
                android:layout_width="match_parent"
                android:layout_height="91dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/VanillaIMG"
                    android:layout_width="47dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:src="@drawable/vanilla" />

                <TextView
                    android:id="@+id/VanillaTXT"
                    android:layout_width="198dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_horizontal|center_vertical"
                    android:text="Vanilla"
                    android:textColor="#177E00"
                    android:textSize="34sp"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/VanillaBTN"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:layout_width="32dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:backgroundTint="#FEFEFE"
                    android:clickable="true"
                    android:gravity="center_horizontal|center_vertical"
                    android:text=">"
                    android:textColor="#FF0000"
                    tools:textSize="34sp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/Strawberry"
                android:layout_width="match_parent"
                android:layout_height="91dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/StrawberryIMG"
                    android:layout_width="47dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:src="@drawable/strawberry" />

                <TextView
                    android:id="@+id/StrawberryTXT"
                    android:layout_width="198dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_horizontal|center_vertical"
                    android:text="Strawberry"
                    android:textColor="#177E00"
                    android:textSize="34sp"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/StrawberryBTN"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:layout_width="32dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:backgroundTint="#FEFEFE"
                    android:clickable="true"
                    android:gravity="center_horizontal|center_vertical"
                    android:text=">"
                    android:textColor="#FF0000"
                    tools:textSize="34sp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/CookiesandCream"
                android:layout_width="match_parent"
                android:layout_height="91dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/ookiesandCreamIMG"
                    android:layout_width="47dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
